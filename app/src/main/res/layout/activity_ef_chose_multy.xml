<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout4"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:background="#d75c23"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewNC"
            android:layout_width="200dp"
            android:layout_height="31dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/lato"
            android:text="Encrypted Files"
            android:textSize="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/backNewEF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="#d75c23"
            android:minWidth="48dp"
            android:minHeight="48dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/arrow_left" />

        <ImageView
            android:id="@+id/encryptedFilesLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            app:layout_constraintStart_toEndOf="@+id/backNewEF"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/encrypted_files_logo" />



    </androidx.constraintlayout.widget.ConstraintLayout>


    <ImageButton
        android:id="@+id/searchEF"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="12dp"

        android:layout_marginEnd="20dp"
        android:background="#ffffff"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/constraintLayout4"
        app:srcCompat="@drawable/ic_icon_search" />

    <ImageView
        android:id="@+id/backFriendsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="110dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_line_1" />

    <ListView
        android:id="@+id/encryptedFilesList"
        android:layout_width="404dp"
        android:layout_height="520dp"
        android:layout_marginTop="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout4">

    </ListView>

    <Button
        android:id="@+id/sendFilesBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="20dp"
        android:text="Send Files"
        android:fontFamily="@font/lato"
        android:textColor="#272B2D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/encryptedFilesList" />

    <Button
        android:id="@+id/deleteFilesBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#272B2D"
        android:text="Delete Files"
        android:fontFamily="@font/lato"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/encryptedFilesList" />


</androidx.constraintlayout.widget.ConstraintLayout>
