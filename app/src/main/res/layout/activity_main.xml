<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/firstActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="privacymanager.android.UI.menu.MenuUI">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:background="#d75c23"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:backgroundTint="@color/gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo_svg" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="18dp"
            android:foregroundTint="#383d40"
            android:text="Privacy manager"
            android:textSize="22sp"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/notificationsBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_icon_notifications" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="340dp"
        android:layout_height="550dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout2">

        <TextView
            android:id="@+id/textViewWelcoming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:foregroundTint="#383d40"
            android:text="username"
            android:textColor="#d75c23"
            android:textSize="22sp"
            app:layout_constraintStart_toEndOf="@+id/textView10"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/credentialsBtn"
            android:layout_width="0dp"
            android:layout_height="63dp"
            android:layout_marginTop="32dp"
            android:backgroundTint="#d75c23"
            android:drawableLeft="@drawable/credintials_logo"
            android:drawableRight="@drawable/ic_arrow_forward"
            android:gravity="left|center_vertical"
            android:paddingLeft="15dp"
            android:paddingTop="13dp"
            android:paddingRight="10dp"
            android:paddingBottom="16dp"
            android:text="   Credentials"
            android:textColor="#383d40"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/serverConnection" />

        <Button
            android:id="@+id/encryptBtn"
            android:layout_width="0dp"
            android:layout_height="63dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#d75c23"
            android:drawableLeft="@drawable/ic_icon_encryption"
            android:drawableRight="@drawable/ic_arrow_forward"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:paddingTop="13dp"
            android:paddingRight="10dp"
            android:paddingBottom="16dp"
            android:text="   Encrypt file"
            android:textColor="#383d40"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/credentialsBtn" />

        <Button
            android:id="@+id/mainEncryptedBtn"
            android:layout_width="0dp"
            android:layout_height="63dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#d75c23"
            android:drawableLeft="@drawable/encrypted_files_logo"
            android:drawableRight="@drawable/ic_arrow_forward"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:paddingTop="13dp"
            android:paddingRight="10dp"
            android:paddingBottom="16dp"
            android:text="   Decrypt file"
            android:textColor="#383d40"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/encryptBtn" />

        <Button
            android:id="@+id/friendsBtn"
            android:layout_width="0dp"
            android:layout_height="63dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#d75c23"
            android:drawableLeft="@drawable/friends_logo"
            android:drawableRight="@drawable/ic_arrow_forward"
            android:gravity="left|center_vertical"
            android:paddingLeft="16dp"
            android:paddingTop="13dp"
            android:paddingRight="10dp"
            android:paddingBottom="16dp"
            android:text=" Friends list"
            android:textColor="#383d40"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mainEncryptedBtn" />

        <Button
            android:id="@+id/clearSessionBtn"
            android:layout_width="0dp"
            android:layout_height="63dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="#d75c23"
            android:drawableLeft="@drawable/dispose_small"
            android:gravity="left|center_vertical"
            android:paddingLeft="15dp"
            android:paddingTop="13dp"
            android:paddingRight="10dp"
            android:paddingBottom="16dp"
            android:text="   Clear and exit"
            android:textColor="#383d40"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/friendsBtn" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Wellcome,"
            android:textSize="26sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/serverConnection"
            android:layout_width="110dp"
            android:layout_height="48dp"
            android:layout_marginTop="50dp"
            android:text="Connect"
            android:textSize="15sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="Mode:"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />

        <TextView
            android:id="@+id/textView14Mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:layout_marginTop="16dp"
            android:text="offline"
            android:textColor="#A8A8A8"
            android:textSize="19sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/textView9"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />

        <ImageView
            android:id="@+id/imageConnectionStatus"
            android:layout_width="25dp"
            android:layout_height="24dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="8dp"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/done" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>